<div class="card card-body">
    <div class="row">
        <div class="col-md-12 col-xl-12 col-sm-12">
            <h3 class="mt-4 pb-2 text-primary fw-bold">{{ trans("your_transactions") }} Dedipass</h3>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th>{{ trans("amount")}}</th>
                            <th>Payout</th>
                            <th>Code</th>
                            <th>Identifier</th>
                            <th>{{ trans("date")}}</th>
                            <th>{{ trans("state2")}}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if items is not empty %}
                            {% for item in items %}
                                <tr>
                                    <td>#{{ item.id }}</td>

                                    <td>{{ item.amount | formatted_price() }}</td>
                                    <td>{{ item.payout | formatted_price(true, 'none') | trans }}</td>
                                    <td>{{ item.code }}</td>
                                    <td>{{ item.identifier }}</td>

                                    <td>{{ item.createdAt.format('d/m/y H:i:s') }}</td>
                                    <td>{{ item.statusBadge | raw }}</td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="7">{{ trans("no_record") }}</td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>
                </div>
        </div>
        <div class="col-md-12 col-xl-12 col-sm-12">
            <div class="card card-body">
        {% if public is not empty %}
                        <div data-dedipass="{{ public }}" data-dedipass-custom="{{ current_user().id }}"></div>
                    {% else %}
                        <p>Please config public and private key in settings for display terminal</p>
                    {% endif %}
                </div>
            </div>
</div>
</div>